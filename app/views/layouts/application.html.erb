<!DOCTYPE html>
<html>
  <head>
    <title>Coderchat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
    <nav class="navbar navbar-light bg-faded container">
      <a class="navbar-brand" href="/">Coder Chat</a>
      <ul class="nav navbar-nav">
      <% if signed_in? %>
        <li class="nav-item">
          <%= link_to "Log Out", logout_path, class: 'nav-link', method: 'delete' %>
        </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign Up", signup_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign In", login_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
    </nav>
    <% if flash.any? %>
      <%= flash_messages(flash) %>
    <% end %>
      <%= yield %>
    </div>
  </body>
</html>
