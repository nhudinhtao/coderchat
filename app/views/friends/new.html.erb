<h1>Add Friend</h1>
<%= form_for [@user, @friend] do |f|%>
  <div class="form-group">
    <%= f.label :user_id %>
    <%= f.text_field :user_id, class: 'form-control', value: params[:user_id], :readonly => true %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', value: params[:user_name] %>
  </div>
  
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control', value: params[:user_email] %>
  </div>

  <div class="form-group">
    <%= f.label :phone %>
    <%= f.text_field :phone, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
        <%= f.submit 'Save' , class: 'btn btn-block btn-info' %>
  </div>
<% end %>
